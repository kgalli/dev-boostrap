#!/bin/bash

# use global ignore file for e.g. *.DS_Store and similar
if [ -f ~/.gitexcludes ]
then
  echo "The file ~/.gitexcludes already exists"
else
  touch ~/.gitexcludes.txt
  echo *DS_Store > ~/.gitexcludes
  echo .idea > ~/.gitexcludes
  echo *.swp > ~/.gitexcludes
fi

# symlink gitconfig directory to ~/.gitconfig
ln -nfs ~/dev-bootstrap/git/gitconfig ~/.gitconfig

# set user attributes
echo Please, enter your user name for git
read NAME
git config --global user.name $NAME

echo Please, enter your email for git
read EMAIL
git config --global user.email $EMAIL

